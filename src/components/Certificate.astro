---
import 'photoswipe/style.css';

const { certificate } = Astro.props;


---


<div class="pswp-gallery" id="gallery">
    <div class="card">
        <a href={certificate.imagen} data-pswp-width="1000" data-pswp-height="800" target="_blank">
            <img src={certificate.imagen} alt={certificate.nombre} />
        </a>
    </div>
  </div>


<script>

import PhotoSwipeLightbox from 'photoswipe/lightbox';

const lightbox = new PhotoSwipeLightbox({
  gallery: '#gallery',
  children: 'a',
  pswpModule: () => import('photoswipe')
});
lightbox.init();
</script>


<style>
    .card{
        height: 400px;
    }

    .card img{
        width: 100%;
    }


</style>