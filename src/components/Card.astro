---
const { project } = Astro.props;



---

<div class="card swiper-slide">
    <div class="card-header">
        <img src={project.imagenes[0]} alt={project.nombre} />
    </div>
    <div class="card-body">
        <h4>
            {project.nombre}
        </h4>
        <p>
            {project.descripcion}
        </p>
        <div class="container-tags">
            {
                project.tecnologias.map((tecnologia: unknown) => <span class="tag tag-color">{tecnologia}</span>)
            }

        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
        width: 300px;
        height: auto;
        padding: 10px;
        border: 1px solid rgba(255, 255, 255, 0.116);
        background-color: rgba(255, 255, 255, 0.068);
        box-shadow: 0 0 10px 1px rgba(0, 0, 0, 0.25);

        backdrop-filter: blur(15px);
    }
    .card-header img {
        width: 100%;
        height: 200px;
        border-radius: 10px;
        object-fit: cover;
    }
    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        padding: 10px 0;
    }
    .card-body h4{
        font-family: "Poppins", sans-serif;
        font-size: 19px;
    }
    .card-body p{
        font-family: "Poppins", sans-serif;
        margin-top: 5px;
        margin-bottom: 20px;
        font-size: 16px;
    }
    .container-tags{
        display: flex;
        gap: 5px;
        flex-wrap: wrap;
    }
    .tag {
        border-radius: 50px;
        font-size: 12px;
        margin: 0;
        font-family: "Poppins", sans-serif;
        padding: 2px 10px;
        cursor: pointer;
        color: var(--primary-color);
    }
    .tag-color {
        background-color: rgba(24, 220, 255, 0.090);
    }

</style>